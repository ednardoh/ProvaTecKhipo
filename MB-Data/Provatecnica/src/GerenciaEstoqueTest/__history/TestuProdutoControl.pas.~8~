  AValorpesquisa := '1';
  ReturnValue := FProdutoControl.ObterCodBarra(AValorpesquisa);
end;

procedure TestTProdutoControl.TestIncluir;
  var ATipo: TAcao;
      ReturnValue: Boolean;
begin
  ATipo := uEnumerado.tacIncluir;
  FProdutoControl:= TProdutoControl.Create;
  FProdutoControl.ProdutoModel.Acao        := ATipo;
  TB_ProdutosID.AsInteger           := Produtos.ProdutoModel.GetId;
  FProdutoControl.ProdutoModel.Codigo      := TB_ProdutosID.AsInteger; //gera codigo automático
  FProdutoControl.ProdutoModel.Codigobarra := TB_ProdutosCODIGO_BAR.AsString;
  FProdutoControl.ProdutoModel.Descricao   := TB_ProdutosDESCRICAO.AsString;
  FProdutoControl.ProdutoModel.PRECOCOMPRA := TB_ProdutosPRECO_COMPRA.AsCurrency;
  FProdutoControl.ProdutoModel.PRECOVENDA  := TB_ProdutosPRECO_VENDA.AsCurrency;
  FProdutoControl.ProdutoModel.QTDEESTOQUE := TB_ProdutosQTD_ESTOQUE.AsCurrency;
  FProdutoControl.ProdutoModel.CATEGORIAPRD := cbo_CategoriaPRD.ItemIndex+1;
  FProdutoControl.Salvar;

end;

