  FEntradasProdutosControl.EntradasProdutosModel.QuantidadeEntrada   := 3.2;
  FEntradasProdutosControl.EntradasProdutosModel.ValorUnitarioCompra := 4.2;
  FEntradasProdutosControl.Salvar;
end;

