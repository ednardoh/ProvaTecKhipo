procedure TestTEntradasProdutosControl.TestIncluir;
begin
  ATipo := uEnumerado.tacIncluir;
  FEntradasProdutosControl.EntradasProdutosModel.Acao                := ATipo;
  FEntradasProdutosControl.EntradasProdutosModel.Id                  := FEntradasProdutosControl.EntradasProdutosModel.GetId;
  FEntradasProdutosControl.EntradasProdutosModel.IdProduto           := 1; //gera codigo automático
  FEntradasProdutosControl.EntradasProdutosModel.QuantidadeEntrada   := 1.2;
  FEntradasProdutosControl.EntradasProdutosModel.ValorUnitarioCompra := 2.2;
  FEntradasProdutosControl.EntradasProdutosModel.ValorTotal          := (1.2*2.2);
  FEntradasProdutosControl.Salvar;
end;

